{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./resources/js/*"],
      "@/*": ["./resources/js/*"],      
    }
  },
  "exclude": [
    "node_modules",
    "public",
    "storage",
    "vendor",
    ".github",
    ".idea",
    ".vscode"
  ],
  "include": [
    "resources/js/**/*",
    "resources/views/**/*.blade.php"
  ]
}